// GLOBAL
// style
// sprite

.sprite4
	position absolute



//
// target toggle
//

#fixjump-1:target ~ .sprite4__arrow--white
#fixjump-2:target ~ .sprite4__arrow--white
#fixjump-3:target ~ .sprite4__arrow--white
#fixjump-4:target ~ .sprite4__arrow--white
	visibility visible

.project-list .sprite4__arrow--white
	visibility hidden





.project .sprite4__arrow--white
	left 15px
	fill white

.project .sprite4__arrow--yellow
	top 1px
	left -25px
	fill #ebb240




.sprite4__arrow
	width 20px
	height 15px


.sprite4__favorite
	width 30px
	height 25px
	fill black
	animation pulse 3s infinite

	&:hover
		fill red
		transition fill .5s


.sprite4__favorite--l1
	top -30px
	left 0px

.sprite4__favorite--l2
	top -30px
	left -2px

.sprite4__favorite--l3
