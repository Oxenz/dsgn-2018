.header
	color empty


.header__l1
	background-color #e9eae2
	height 500px


.header__r1
	background-image linear-gradient(to bottom right,#7acec3 348px,#d5e5dd 349px,#d5e5dd 351px,#7acec3 352px)
	height 500px


.header__address
	left 10%
	bottom 28%
	font-size 13px
	line-height 14px


.header__address-info
	color white


.header__mail
	top 125px
	left 75px


.header__btn-wrapper
	top 10%
	left 30%


.header__btn-hamburger
	background-color #ffc107
	padding 31px 33.5px
	border-color transparent
	border-width 3px
	border-radius 0px


.header__btn-hamburger.collapsed
	background-color transparent
	border-color #e9eae2


.header__btn-icon
	width 52px
	height 52px
	display block
	background no-repeat center center
	background-size 100% 100%



.collapsed .header__btn-icon
	background-image url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='%23e9eae2' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E")


.header__btn-icon
	background-image url("data:image/svg+xml;utf8;base64,")



#main-menu
	position absolute
	top 0px
	left -749px
	min-width 750px
	// min-height 120px явное указние высоты fix баг при масштабирования экрана, при котором блок либо незначительно увел. в высоту или умен.
	// Нельзя явно задавать высоту из-за промежуточный BS анимации - которая находится между .show  _here_ .hide
	// Если задать высоту блоку, его скрытие будет резким и с задержкой после события скрытия
	// Без явно указания высоты блок скроется плавно "снизу в верх" процес скрывания или появление начнется сразу без задержки


.my__link
	display block
	padding 47px 50px
	font-size 14px
	line-height 26px
	text-transform uppercase
	color white


.my__link:active
	background-color #fff


@media (max-width: 1599px)
	.header__r1
		background-image linear-gradient(to bottom right,#7acec3 264px,#d5e5dd 265px,#d5e5dd 266px,#7acec3 267px)

	.header__btn-wrapper
		top 5%
		left 20%

	.header__address
		left 5%
		bottom 30%

	.header__mail
		top 160px
		left 100px
