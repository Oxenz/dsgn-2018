
.studio
	background-color #e9eae2
	background-clip content-box


	&__l1
		height 500px
		background-image linear-gradient(bgs1 230px, bgs2 230px, bgs2 270px, bgs1 250px, bgs1)


	&__r1
		color empty



	&__caption
		position absolute
		top 22% //40
		left 36%
		font-size 48px
		line-height 56px
		color white


	&__office
		max-width 360px
		height 200px
		transition transform .225s

		&:hover
			transform scale(1.15)


	&__achivment
		max-width 360px


	&__awards
		box-shadow 0px 2px 0 0 #dbdcd4


	.studio__awards-item
		flex-basis 50%

		&:nth-child(even)
			text-align right




.staff
	height 342px


	&__inner
		max-width 265px
		top 50px
		right 20px



.personal__img-wr
.personal__character
.personal__contact
	max-width 875px

.personal__img-wr
	overflow hidden


.personal__img
	transition transform .225s


.personal__img--1:hover
	transform scale(1.2) translateX(50px)

.personal__img--2:hover
	transform scale(1.2)

.personal__img--3:hover
	transform scale(1.2) translateX(-50px)


.personal__name
.personal__position
	flex-basis 30%

.personal__name:not(:first-child):not(:nth-child(4))
.personal__position:not(:first-child):not(:nth-child(4))
	margin-left 40px


.personal__network
	flex-basis 31%


.studio .sprite4__arrow--orange
	transform rotateY(180deg)
	fill #fa6925





.studio__sprite-social
	width 20px
	height 15px
	fill #fa6925
	transition fill .5s

	&:hover
		fill black

.personal__link
	padding 5px 7px

	span
		color #fa6925
