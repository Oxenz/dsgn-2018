.myclose
	color #262626
	font-size 44px
	line-height 44px
	font-weight 300
	background-color transparent
	align-self flex-end
	border 1px solid black
	padding 25px
	margin-right 30px
	margin-top 30px
	width 100px
	height 100px









@keyframes pulsez {
	0% {
		filter: drop-shadow(0 0 0)
	}

	30% {
		filter: drop-shadow(0 0 0)
	}

	80% {
		filter: drop-shadow(0px 0px 15px red)
	}

	100% {
		filter: drop-shadow(0px 0px 25px red)
	}
}


@keyframes pulse-example {
	0% {
		box-shadow: 0 0
	}

	30% {
		box-shadow: 0 0
	}

	80% {
		box-shadow: 0 0 5px 10px rgba(255,255,255,0)
	}

	100% {
		box-shadow: 0 0 0 0 rgba(255,255,255,0)
	}
}
